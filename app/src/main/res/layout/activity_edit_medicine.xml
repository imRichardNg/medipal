<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_medicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iss.nus.medipal.activity.EditMedicineActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_medicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Medicine Name" />

    <EditText
        android:id="@+id/et_medicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_medicineName"/>

    <TextView
        android:id="@+id/tv_medicineDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Description" />

    <EditText
        android:id="@+id/et_medicineDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_medicineDescription"/>

    <TextView
        android:id="@+id/tv_categoryID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category ID" />

    <Spinner
        android:id="@+id/spn_categoryType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_categoryID"/>

    <TextView
        android:id="@+id/tv_reminderID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder ID" />

    <Spinner
        android:id="@+id/spn_reminderType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_reminderID"/>

        <TextView
            android:id="@+id/tv_IsRemind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is Remind" />
    <CheckBox
        android:id="@+id/ck_IsRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_below="@id/tv_IsRemind"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/tv_quantity"/>

    <TextView
        android:id="@+id/tv_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosage" />

    <EditText
        android:id="@+id/et_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/tv_dosage"/>

    <TextView
        android:id="@+id/tv_consumedQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumed Quantity" />

    <EditText
        android:id="@+id/et_consumedQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/tv_consumedQuantity"/>


    <TextView
        android:id="@+id/tv_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thershold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/et_thershold"
        android:layout_below="@+id/tv_threshold"/>

    <TextView
        android:id="@+id/tv_IssuedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issued Date(DD/MM/YYYY)"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_IssuedDate"
        android:layout_below="@+id/tv_IssuedDate"/>

    <TextView
        android:id="@+id/tv_expireFactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expire Factor"/>

    <EditText
        android:id="@+id/et_expireFactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_editMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/btn_deleteMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_editMedicine"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:text="@string/delete"
            android:textColor="@android:color/white" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
